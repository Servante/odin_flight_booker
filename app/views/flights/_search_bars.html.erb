<div id="search-instructions">
  <strong><p>Please Select Search Criteria Below:</p></strong>
</div>
<%= form_with url: "/flights", method: :get do |f| %>
  <div id="search">
    <div class="search-field">
      <%= f.select(:arrival_airport_id, 
                  options_for_select(@airport_options),
                  prompt: "Destination") %>
    </div>
    <div class="search-field">
      <%= f.select(:departure_airport_id, 
                  options_for_select(@airport_options),
                  prompt: "Departure") %>
    </div>
    <div class="search-field">
      <%= f.select(:ticket_count,
                  options_for_select([1,2,3,4], params[:ticket_count]), 
                  prompt: "Passengers")%>
    </div>
    <div class="search-field">
      <%= f.date_field(:departure_date, 
                       required: true,
                       prompt: "Date") %>
    </div>
    <%= f.submit "Search" %>
  </div>
<% end %> 