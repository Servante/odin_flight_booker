<%= form_with url: "/flights", method: :get do |f| %>
  <%= f.label("Destination") %>
  <%= f.select(:arrival_airport_id, 
               options_for_select(@airport_options)) %>
  <%= f.label("Departure") %>
  <%= f.select(:departure_airport_id, 
               options_for_select(@airport_options)) %>
  <%= f.label("Passengers") %>
  <%= f.select(:ticket_count,
               options_for_select([1,2,3,4]))%>
  <%= f.label("Date") %>
  <%= f.date_field(:start) %>
  <%= f.submit "Search" %> 
<% end %> 