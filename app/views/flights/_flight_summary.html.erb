<div class="summary-card">
  <div id="flight-summary-container-1">
    <div id="summary-title"> 
      <p>Flight Number: <%= @flight.id %></p>
    </div>
  </div>
  <div id="flight-summary-container-2">
    <div class="summary-locations">
      <%= @flight.departure_airport.location %>
    </div>
    <div id="flight-summary-join">
      <p>to</p>
    </div>
    <div class="summary-locations">
      <%= @flight.arrival_airport.location %>
    </div>
  </div>
  <div id="flight-summary-container-3">
    <div id="summary-flighttime-info">
      <div id="summary-date">
         <p><strong>Flight Date:  </strong><%= @flight.departure_date %></p>
      </div>
      <div id="summary-date">
         <p><strong>Flight Time:  </strong><%= @flight.departure_time %></p>
      </div>
      <div id="summary-duration">
        <p><strong>Flight Duration:  </strong><%= @flight.flight_duration %></p>
      </div>
    </div>
  </div>
</div>